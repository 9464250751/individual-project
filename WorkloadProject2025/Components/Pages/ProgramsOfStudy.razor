@page "/programsofstudy"
@inject ProgramsOfStudyService _ProgramOfStudyService;
@inject DepartmentService _departmentService;
<ProgramOfStudyForm department="DEPT" OnSaved="Save"></ProgramOfStudyForm>


<MudCard Class="mx-auto mt-6" Style="max-width: 450px;">
    <MudCardHeader>
        <MudText Typo="Typo.h6" Class="font-semibold">Current Programs</MudText>
    </MudCardHeader>

    <MudCardContent>
        <MudStack Spacing="2">
            @foreach (var pos in POS)
            {
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">@pos.Name</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudCardActions>
                        <MudButton Variant="Variant.Text" Color="Color.Primary">View Courses</MudButton>
                    </MudCardActions>
                </MudCard>
            }
        </MudStack>
    </MudCardContent>

</MudCard>

@code {

    List<ProgramOfStudy> POS = new List<ProgramOfStudy>();
    List<Department> DEPT = new();
    //Fires when the page first loads
    protected override async Task OnInitializedAsync()
    {
        //Call our service, to fill our list
        POS = await _ProgramOfStudyService.GetAllAsync();
        DEPT = await _departmentService.GetAllAsync();
        //Let the GUI know state changed
    }

    public async Task Save()
    {
        //Refresh our list of schools
        POS = await _ProgramOfStudyService.GetAllAsync();
        StateHasChanged();
    }
}