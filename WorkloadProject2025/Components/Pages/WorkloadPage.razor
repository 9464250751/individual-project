@page "/WorkloadPage"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">Workload</MudText>

    <MudTable Items="workloads" Hover="true" Bordered="true" Striped="true">
        <HeaderContent>
            <MudTh>Staff</MudTh>
            <MudTh>Program</MudTh>
            <MudTh>Course</MudTh>
            <MudTh>Hours/Week</MudTh>
            <MudTh>Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Staff</MudTd>
            <MudTd>@context.Program</MudTd>
            <MudTd>@context.Course</MudTd>
            <MudTd>@context.HoursPerWeek</MudTd>
            <MudTd>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Edit</MudButton>
                <MudButton Variant="Variant.Text" Color="Color.Error">Delete</MudButton>
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudContainer>

@code {
    public class WorkloadItem
    {
        public string Staff { get; set; } = "";
        public string Program { get; set; } = "";
        public string Course { get; set; } = "";
        public int HoursPerWeek { get; set; }
    }

    private List<WorkloadItem> workloads = new List<WorkloadItem>
    {
        new WorkloadItem{ Staff="John Doe", Program="CS", Course="Programming 101", HoursPerWeek=5 },
        new WorkloadItem{ Staff="Jane Smith", Program="Business", Course="Marketing 201", HoursPerWeek=4 }
    };
}
