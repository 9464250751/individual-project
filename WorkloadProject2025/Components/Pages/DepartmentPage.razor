@inject DepartmentService _departmentService;
@inject SchoolService schoolService;
@page "/departmentpage"

<DepartentForm Schools="schools" OnSaved="Save"></DepartentForm>


<MudCard Class="mx-auto mt-6" Style="max-width: 450px;">
    <MudCardHeader>
        <MudText Typo="Typo.h6" Class="font-semibold">Current Departments</MudText>
    </MudCardHeader>

    <MudCardContent>
        <MudStack Spacing="2">
            @foreach (var Dept in departments)
            {
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">@Dept.Name</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudCardActions>
                        <MudButton Variant="Variant.Text" Color="Color.Primary">View Departments</MudButton>
                    </MudCardActions>
                </MudCard>
            }
        </MudStack>
    </MudCardContent>

</MudCard>

@code {
    //Make a list of Schools that we can load
    List<Department> departments = new();
    List<School> schools = new();
    protected override async Task OnInitializedAsync()
    {
        departments = await _departmentService.GetAllAsync();
        schools = await schoolService.GetAllAsync();

    }

    public async Task Save()
    {
        //Refresh our list of schools
        departments = await _departmentService.GetAllAsync();
        StateHasChanged();
    }


}